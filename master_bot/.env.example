# Master Bot Configuration
MASTER_BOT_TOKEN=your_master_bot_token_here
MASTER_ADMIN_ID=your_admin_id_here

# Database Configuration
MASTER_DB_NAME=master_bot.db

# Server Configuration (for deployment)
SERVER_HOST=your-server.com
SERVER_USER=root
SERVER_PASSWORD=your_ssh_password
SERVER_PORT=22

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
VPN_BOT_IMAGE=vpn-bot:latest

# Payment Configuration

# Aqay Payment Gateway
AQAY_API_KEY=your_aqay_api_key
AQAY_BASE_URL=https://aqayepardakht.ir/api/v2
AQAY_ENABLED=true

# Card to Card Payment
CARD_TO_CARD_ENABLED=true

# Cryptocurrency Payment
CRYPTO_ENABLED=true
DEFAULT_DOLLAR_PRICE=50000

# Pricing (in Toman)
MONTHLY_PRICE=200000
YEARLY_PRICE=2000000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=master_bot.log